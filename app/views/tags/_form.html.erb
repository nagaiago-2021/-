<%= form_with(model: tag, local: true) do |form| %>
  <% if tag.errors.any? %>
    <div id="error_explanation">
      <h2>以下の入力に誤りがあります。</h2>

      <ul>
        <% tag.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field mb-5">
    <div class=""><%= form.label :種類 %></div>
      <%= form.text_field :kind, class:"form-control"%>
    </div>
    <div class="float-right ">
      <div class="actions">
        <%= form.submit :"登録", class: 'btn btn-info'%>
        <%= link_to '戻る', tags_path, class: 'btn btn-info text-light' %>
      </div>
    </div>
  </div>
<% end %>
